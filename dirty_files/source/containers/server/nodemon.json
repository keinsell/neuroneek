{
  "quiet": true,
  "delay": 1000,
  "signal": "SIGQUIT",
  "watch": [
    "src",
    ".env",
    "dist/.env",
    "node_modules"
  ],
  "exitcrash": false,
  "ext": ".ts,.js",
  "ignore": [
    "src/externals/compodoc"
  ],
  "exec": "clear && pnpm build:tsc && node --experimental --enable-source-maps dist/main.js"
}
