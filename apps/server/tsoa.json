{
	"entryFile": "src/index.ts",
	"noImplicitAdditionalProperties": "throw-on-extras",
	"controllerPathGlobs": ["**/*.controller.ts", "*/**/*.controller.ts"],
	"spec": {
		"outputDirectory": "dist",
		"specVersion": 3,
		"securityDefinitions": {
			"Bearer": {
				"type": "http",
				"scheme": "bearer",
				"bearerFormat": "JWT"
			}
		},
		"security": [{ "Bearer": [] }]
	},
	"routes": {
		"basePath": "/",
		"entryFile": "src/index.ts",
		"routesDir": "dist",
		"authenticationModule": "src/shared/infrastructure/authorization/auth.ts",
		"iocModule": "src/shared/infrastructure/ioc/container.ts",
		"esm": true
	}
}
