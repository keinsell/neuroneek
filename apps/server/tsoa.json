{
	"entryFile": "src/index.ts",
	"noImplicitAdditionalProperties": "throw-on-extras",
	"controllerPathGlobs": ["**/src/interfaces/http/routes/**/*.ts"],
	"spec": {
		"outputDirectory": "docs",
		"specVersion": 3,
		"securityDefinitions": {
			"Bearer": {
				"type": "http",
				"scheme": "bearer",
				"bearerFormat": "JWT"
			}
		},
		"security": [{ "Bearer": [] }]
	},
	"routes": {
		"basePath": "/",
		"entryFile": "src/index.ts",
		"routesDir": "dist/routes",
		"esm": true
	}
}
